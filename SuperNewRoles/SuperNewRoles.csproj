<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Version>2.5.0.5</Version>
        <Description>SuperNewRoles</Description>
        <Authors>ykundesu</Authors>
        <AmongUs Condition=" '$(AmongUs)' == '' ">C:/Program Files/Epic Games/AmongUs_mymod</AmongUs>
        <langVersion>preview</langVersion>
        <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
        <LangVersion>latest</LangVersion>
        <DebugType>embedded</DebugType>
        <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
        <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    </PropertyGroup>

    <PropertyGroup>
        <DefineConstants>$(DefineConstants);STEAM</DefineConstants>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ApplicationIcon />
        <Win32Resource />
        <AssemblyName>SuperNewRoles</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <EmbeddedResource Include="Resources\**" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="$(AmongUs)/BepInEx/core/*.dll" />
        <Reference Include="$(AmongUs)/BepInEx/interop/*.dll" />
        <None Remove="CustomCosmetics\CustomCosmeticsData\CustomHatData.cs~RFbacc703.TMP" />
        <Reference Include="$(AmongUs)/BepInEx/plugins/Agartha.dll" />
    </ItemGroup>

    <Target Name="CopyCustomContent" AfterTargets="AfterBuild">
        <Message Text="Second occurrence" />
        <Copy SourceFiles="$(ProjectDir)bin\$(Configuration)\net6.0\SuperNewRoles.dll" DestinationFolder="$(AmongUs)/BepInEx/plugins/" />
        <Exec Command="start &quot;&quot; &quot;$(AmongUs)/Among Us.exe&quot;" />
    </Target>

    <ItemGroup>
        <PackageReference Include="GitInfo" Version="2.0.20">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="BepInEx.AutoPlugin" Version="1.0.1" PrivateAssets="all" />
        <PackageReference Include="AmongUs.GameLibs.Steam" Version="2024.3.5" />
        <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.668" Private="false" ExcludeAssets="runtime;native" />
        <PackageReference Include="BepInEx.IL2CPP.MSBuild" Version="2.0.1" />
        <PackageReference Include="Microsoft.Build.Framework" Version="17.8.3" />
        <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.8.3" />
    </ItemGroup>

    <Target Name="GenerateTranslations" BeforeTargets="CoreCompile">
        <ItemGroup>
            <TranslationFiles Include="Translations\*.csv" />
        </ItemGroup>
        <UsingTask TaskName="SuperNewRoles.Build.TranslationTask" AssemblyFile="$(OutputPath)SuperNewRoles.dll" />
        <TranslationTask
            TranslationFiles="@(TranslationFiles)"
            OutputPath="$(IntermediateOutputPath)GeneratedTranslations.cs" />
        <ItemGroup>
            <Compile Include="$(IntermediateOutputPath)GeneratedTranslations.cs" />
        </ItemGroup>
    </Target>
</Project>
